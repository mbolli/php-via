{% extends "@via/templates/base.html.twig" %}
{% block title %}Stock Ticker - Live Market Data{% endblock %}
{% block styles %}
    .subtitle {
        color: rgba(255,255,255,0.9);
        margin-bottom: 40px;
        font-size: 1.2em;
    }
    .stocks-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
        margin-top: 30px;
    }
    .stock-card {
        background-color: #fff;
        text-decoration: none;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
    }

    .stock-card:hover {
        text-decoration: none;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
    }
    
    .stock-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
    }
    
    .stock-symbol {
        font-size: 1.5em;
        font-weight: 700;
        color: var(--color-dark);
    }
    
    .stock-name {
        font-size: 0.85em;
        color: #6b7280;
    }
    
    .stock-price {
        font-size: 2em;
        font-weight: 700;
        color: var(--color-success);
        margin: 16px 0;
    }
    
    .view-link {
        display: inline-block;
        color: var(--color-primary);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s;
    }
    
    .view-link:hover {
        color: var(--color-secondary);
    }
{% endblock %}
{% block content %}
    <h1>ðŸ“ˆ Stock Ticker</h1>
    <div class="subtitle">Real-time market data with live updates</div>
    <div class="stocks-grid">
        {% for symbol, stock in stocks %}
            <a href="{{ basePath }}stock/{{ symbol }}" class="card stock-card">
                <div class="stock-header">
                    <span class="stock-symbol">{{ symbol }}</span>
                    <span class="stock-name">{{ stock.name }}</span>
                </div>
                <div class="stock-price">${{ stock.price|round(2) }}</div>
                <div class="view-link">View Chart â†’</div>
            </a>
        {% endfor %}
    </div>
{% endblock %}
