{% extends "base.html.twig" %}

{% block title %}Greeter Example{% endblock %}

{% block styles %}
.container {
    text-align: center;
}

.greeting {
    font-size: 24px;
    color: var(--color-dark);
    font-weight: 600;
    margin: 32px 0;
    padding: 24px;
    background: #eff6ff;
    border: var(--border-width) solid var(--color-primary);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
}

.greeting span {
    color: var(--color-primary);
    font-weight: 700;
}

.buttons {
    display: flex;
    gap: 12px;
    justify-content: center;
}
{% endblock %}

{% block content %}
<h1>âš¡ Via Greeter</h1>

<p class="greeting">
    Greeting: <span data-text="${{ greeting.id }}"></span>
</p>

<div class="buttons">
    <button data-on:click="@get('{{ greet_bob.url() }}')">Greet Bob</button>
    <button data-on:click="@get('{{ greet_alice.url() }}')">Greet Alice</button>
</div>
{% endblock %}
