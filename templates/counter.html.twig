{% extends "base.html.twig" %}

{% block title %}Counter Example{% endblock %}

{% block styles %}
.count {
    font-size: 48px;
    font-weight: 700;
    color: var(--color-primary);
    margin: 24px 0;
    display: inline-block;
}

label {
    font-size: 16px;
    font-weight: 500;
}

input[type="number"] {
    max-width: 100px;
    margin: 0 10px;
}

button {
    margin-top: 20px;
}
{% endblock %}

{% block content %}
<h1>âš¡ Via Counter</h1>

<p class="count">Count: {{ count }}</p>

<label>
    Update Step: 
    <input type="number" {{ bind(step) }}>
</label>

<button data-on:click="@get('{{ increment.url() }}')">Increment</button>
{% endblock %}
