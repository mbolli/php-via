{% extends "base.html.twig" %}

{% block title %}Chat: {{ roomName }}{% endblock %}

{% block styles %}
.user-info {
    color: var(--color-dark);
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 20px;
    padding-bottom: 16px;
    border-bottom: 2px solid var(--color-light);
}

.user-info strong {
    color: var(--color-primary);
    font-weight: bold;
}

.user-info a {
    color: var(--color-primary);
    text-decoration: none;
    padding: 6px 14px;
    background: var(--color-light);
    border: 2px solid var(--color-primary);
    border-radius: var(--border-radius);
    transition: all 0.2s;
    font-weight: bold;
}

.user-info a:hover {
    background: var(--color-primary);
    color: white;
}

.users {
    margin-top: 16px;
}

.users h3 {
    margin: 0 0 12px 0;
    color: var(--color-dark);
    font-size: 16px;
    font-weight: bold;
}

.users > div {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
}

.user-item {
    padding: 6px 12px;
    background: var(--color-light);
    border: 2px solid #d1d5db;
    border-radius: 12px;
    font-size: 13px;
    color: var(--color-dark);
    font-weight: bold;
    transition: all 0.2s;
}

.user-item.you {
    background: #fef3c7;
    border-color: var(--color-warning);
    color: #92400e;
}

.messages {
    border: 3px solid var(--color-dark);
    border-radius: var(--border-radius);
    padding: 20px;
    height: 400px;
    overflow-y: auto;
    margin-bottom: 16px;
    background: #f9fafb;
    box-shadow: inset 2px 2px 4px rgba(0, 0, 0, 0.1);
}

.message {
    margin-bottom: 16px;
    padding: 12px 16px;
    background: white;
    border-radius: var(--border-radius);
    border: 3px solid var(--color-dark);
    box-shadow: 2px 2px 0 var(--color-dark);
    max-width: 75%;
}

.message.mine {
    margin-left: auto;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.message.mine .username {
    color: var(--color-warning);
}

.message.mine .timestamp {
    color: rgba(255, 255, 255, 0.8);
}

.message.mine .message-text {
    color: white;
}

.message:last-child {
    margin-bottom: 0;
}

.message-header {
    display: flex;
    gap: 10px;
    align-items: baseline;
    margin-bottom: 6px;
}

.username {
    font-weight: bold;
    color: var(--color-primary);
    font-size: 14px;
}

.timestamp {
    font-size: 12px;
    color: #95a5a6;
}

.message-text {
    color: var(--color-dark);
    word-wrap: break-word;
    line-height: 1.5;
}

.typing {
    font-style: italic;
    color: var(--color-primary);
    min-height: 22px;
    margin-bottom: 12px;
    font-size: 0.9em;
    padding-left: 4px;
}

.input-area {
    display: flex;
    gap: 12px;
    align-items: stretch;
}

.input-area input[type="text"] {
    flex: 1;
}

.input-area button {
    background: linear-gradient(180deg, var(--color-secondary) 0%, #6554d8 100%);
}

.empty-messages {
    color: #95a5a6;
    text-align: center;
    padding: 60px 20px;
    font-style: italic;
    font-size: 15px;
}

@media (max-width: 768px) {
    .user-info {
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
    }
        
    .messages {
        height: 350px;
        padding: 16px;
    }
    
    .message {
        max-width: 90%;
    }
}
{% endblock %}

{% block content %}
    <h1>üí¨ Chat Room: {{ roomName }}</h1>

    <div class="card">
        <div class="user-info">
            You are: <strong>{{ username }}</strong> | <a href="{{ basePath }}">‚Üê Back to room list</a>
        </div>
        <div class="users">
            <h3>üë• Active Users</h3>
            <div>
                {% for user in users %}
                    <div class="user-item {% if user == username %}you{% endif %}">
                        {{ user }}{% if user == username %} (you){% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    
    <div class="card">
        <div class="main">
            <div class="messages" id="messages">
                {% if messages is empty %}
                    <div class="empty-messages">
                        No messages yet. Be the first to say something!
                    </div>
                {% else %}
                    {% for msg in messages %}
                        <div class="message {% if msg.username == username %}mine{% endif %}">
                            <div class="message-header">
                                <span class="username">{{ msg.username }}</span>
                                <span class="timestamp">{{ msg.timestamp }}</span>
                            </div>
                            <div class="message-text">{{ msg.message }}</div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            
            <div class="typing" data-on-interval__duration.5s__viewtransition="$['{{ typingIndicatorId }}'] = ''" data-text="$['{{ typingIndicatorId }}']"></div>
            
            <div class="input-area">
                <input 
                    type="text" 
                    placeholder="Type a message..."
                    data-bind="{{ messageInputId }}"
                    data-on:keyup__throttle.500ms="evt.key != 'Enter' && @get('{{ updateTypingUrl }}')"
                    data-on:keydown="evt.key === 'Enter' && @get('{{ sendMessageUrl }}')"
                    autofocus
                >
                <button data-on:click="@get('{{ sendMessageUrl }}')">Send</button>
            </div>
        </div>
    </div>

    <script>
        // Auto-scroll messages to bottom on new messages
        const messagesDiv = document.getElementById('messages');
        const observer = new MutationObserver(() => {
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        });
        observer.observe(messagesDiv, { childList: true, subtree: true });
        
        // Initial scroll to bottom
        messagesDiv.scrollTop = messagesDiv.scrollHeight;
    </script>
{% endblock %}
