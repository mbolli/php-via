{% extends "base.html.twig" %}

{% block title %}‚ö° Via Todo List{% endblock %}

{% block styles %}
.add-todo {
    display: flex;
    gap: 12px;
    margin-bottom: 24px;
}

.add-todo input {
    flex: 1;
}

.todo-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.todo-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px;
    background: white;
    border: var(--border-width) solid var(--color-light);
    border-radius: var(--border-radius);
    margin-bottom: 12px;
    transition: all 0.2s;
    box-shadow: var(--shadow-sm);
}

.todo-item:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
}

.todo-item.completed {
    background: #f9fafb;
    opacity: 0.7;
}

.todo-content {
    display: flex;
    align-items: center;
    gap: 12px;
    flex: 1;
    cursor: pointer;
    user-select: none;
}

.todo-text {
    flex: 1;
    font-size: 15px;
    color: var(--color-dark);
    font-weight: 500;
}

.todo-item.completed .todo-text {
    text-decoration: line-through;
    color: #9ca3af;
}

.delete-btn {
    padding: 6px 12px;
    font-size: 13px;
}

.empty-state {
    padding: 48px 24px;
    text-align: center;
    color: #9ca3af;
    font-style: italic;
    background: var(--color-light);
    border: var(--border-width) dashed #d1d5db;
    border-radius: var(--border-radius);
    font-size: 15px;
}

.stats {
    margin-top: 24px;
}

.stats .count {
    font-size: 15px;
    padding: 12px;
    background: #eff6ff;
    border: var(--border-width) solid var(--color-primary);
    border-radius: var(--border-radius);
    text-align: center;
    font-weight: 600;
    color: var(--color-primary);
    margin: 0;
}
{% endblock %}

{% block content %}
    <div id="todo-content">
        <h1>‚ö° Todo List</h1>

        <div class="add-todo">
            <input type="text"
                   placeholder="Add a new todo..."
                   {{ bind(newTodo) }}
                   data-on:keydown="evt.key == 'Enter' && @post('{{ addTodo.url() }}')">
            <button data-on:click="@post('{{ addTodo.url() }}')">Add</button>
        </div>

        <ul class="todo-list">
            {% for todo in todos %}
                <li class="todo-item{% if todo.completed %} completed{% endif %}" id="todo-{{ todo.id }}">
                    <div class="todo-content" data-on:click="@post('{{ toggleTodo.url() }}?id={{ todo.id }}')">
                        <input type="checkbox" autocomplete="off" readonly {% if todo.completed %}checked{% endif %}>
                        <span class="todo-text">{{ todo.text }}</span>
                    </div>
                    <button class="delete-btn"
                            data-on:click="@delete('{{ deleteTodo.url() }}?id={{ todo.id }}')">
                        üóëÔ∏è
                    </button>
                </li>
            {% else %}
                <li class="empty-state">No todos yet. Add one above!</li>
            {% endfor %}
        </ul>

        <div class="stats">
            <p class="count">
                Total: {{ todos|length }} items
                {% if todos|filter(t => t.completed)|length > 0 %}
                    ¬∑ {{ todos|filter(t => t.completed)|length }} completed
                {% endif %}
            </p>
        </div>
    </div>
{% endblock %}
